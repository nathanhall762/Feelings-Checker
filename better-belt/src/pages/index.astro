---
import Layout from "../layouts/Layout.astro";
import SessionComponent from "../components/SessionComponent.jsx";
---

<Layout title="Bienvenue to Astro.">
  <main>
    <h1>Feelings <span class="text-gradient">Checker</span></h1>
    <SessionComponent client:load />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    height: 100vh;
    width: 800px;
    max-width: 100%;
    color: var(--text-dark);
    font-size: 20px;
    line-height: 1.6;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin: 1em 0;
  }
  .text-gradient {
    background: linear-gradient(90deg, #ff00f7 0%, #ff8c00 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
